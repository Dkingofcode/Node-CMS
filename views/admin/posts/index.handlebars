<h1>posts</h1>

{{#if success_message}}
     <div class="alert alert-success">
     {{success_message}}
     </div>

{{/if}}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>

    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img height="30" class="img-responsive" src="/uploads/{{file}}" alt="" /></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category}}</td>
            <td>{{allowComments}}</td>
            <td>{{GenerateTime date "MM dd YY"}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        
        </tr>
    
         {{/each}}
    </tbody>
</table>